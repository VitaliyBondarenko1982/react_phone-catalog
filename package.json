  "dependencies": {
    "@cypress/react": "^5.12.4",
    "bulma": "^0.9.3",
    "classnames": "^2.3.2",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.14.2",
    "react-scripts": "^4.0.3",
    "react-slick": "^0.29.0",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "@mate-academy/eslint-config-react-typescript": "*",
    "@mate-academy/stylelint-config": "*",
    "@types/lodash": "^4.14.198",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@types/react-slick": "^0.23.10",
    "concurrently": "^8.2.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.4",
    "lint-staged": "^7.3.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.2.0",
    "mochawesome-report-generator": "^6.2.0",
    "node-sass": "^6.0.1",
    "prettier": "^2.8.8",
    "stylelint": "^13.13.1",
    "typed-scss-modules": "^7.1.4",
    "typescript": "^4.6.3",
    "typescript-eslint-parser": "^22.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "prettier": "prettier --write . --ignore-path .gitignore",
    "start": "react-scripts start",
    "dev": " concurrently \"npm start\" \"npm run gen:scss-types\"",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "lint-js": "eslint --ext .ts,.tsx,.js,.jsx ./src --ignore-path .gitignore",
    "lint-css": "npx stylelint \"src/**/*.scss\"",
    "lint": "npm run lint-js && npm run lint-css",
    "format": "npm run prettier && npm run lint-js -- --fix && npm run lint-css -- --fix",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "gen:scss-types": "npx typed-scss-modules src -w"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{ts, tsx}": "npm run lint"
  }
}
